{% extends "::base.html.twig" %}

{% block stylesheets %}
    {% stylesheets 'bundles/wittyuser/css/*.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    
    <link href='http://fonts.googleapis.com/css?family=Cabin+Sketch|Karla:400,400italic,700,700italic|Crete+Round' rel='stylesheet' type='text/css'>
{% endblock %}

{% block content %}

<div id="container">

	<p class="titrePage titrePageProfil">Mon profil</p>
	<div id="blocContenuProfil">
		<figure class="avatar">
			<p class="texte_profil">Photo de profil :</p>
			<img class="img_avatar" src="{{ url_asset('avatar', user.id, user.avatar) }}"/>
		</figure>
		
		<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
			{{ form_widget(form) }}
			<div>
				<input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
			</div>
		</form>
		
		<br/>
		<br/>
		
		<h2>Les projets que vous avez soutenus</h2>
		<br/>
		{% render "WittyUserBundle:Profile:displayRewards" %}
		
		<br/>
		<br/>
		
		{% if user.games|length > 0 %}
			<h2>Les projets que vous avez soutenus en saisons 1 et 2</h2>
			<br/>
			{% for game in user.games %}
				<p>Vous avez {{ game.sharesByUserId(user.id)|length }} parts de {{game.name}}.</p>
				<br/>
			{% endfor %}
		{% endif %}
		
		<br/>
		<br/>
		
		{% if user.credit > 0 %}
			<h2>Votre crédit</h2>
			<br/>
			<p>Votre crédit est actuellement de {{ user.credit }} €</p>
		{% endif %}
		
		<br/>
		<br/>
	</div>
	
	
</div>	
	
{% endblock content %}
