<script>

	function timer()
	{
			//Timer pour la redirection
			var time_left = parseInt($('.timer').html());
			if (time_left < 1)
			{
				window.location = "{{ path('mwg_accueil') }}";
			}
			else
			{
				$('.timer').html(time_left - 1);
				setTimeout("timer()", 1000);
			}
	}


	$(document).ready(function(){
		setTimeout("timer()", 1000);
	});
</script>
	
