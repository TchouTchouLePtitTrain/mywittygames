{% extends "WittyBlogBundle::layout.html.twig" %}

{% block stylesheets %}
    {% stylesheets 'bundles/wittyblog/css/*.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    
    <link href='http://fonts.googleapis.com/css?family=Cabin+Sketch|Karla:400,400italic,700,700italic|Crete+Round' rel='stylesheet' type='text/css'>
{% endblock %}


{% block content %}

<div id="container">
	
	{% for post in posts %}
		<section class="blog">
			<h2>{{ post.title }}</h2>
			<p class="delay">- Il y a {{ post.delay }}</p>
			<div class="spacer"></div>
			<article>
				{{ post.content|nl2br }}
			</article>
		</section>
	{% endfor %}
		
    <div class="spacer"></div>
</div>

{% endblock %}



{% block javascripts %}
    {% javascripts 'bundles/wittyblog/js/*.js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
