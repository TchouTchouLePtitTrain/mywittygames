{# ATTENTION ! Pour l'instant Assetic ne gère pas les notations : {% stylesheets '@WittyBarBundle/Resources/public/css/*' filter='cssrewrite' %} #}
{# Il faut donc pointer directement sur le bundle ... c'est l'issue #53 sur github -> à surveiller #}
{% stylesheets 'bundles/wittybar/css/*.css' filter='cssrewrite' %}
	<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}


<div id="bandeauHaut">

<div class="container_bandeau">

	<div id="menu_witty">
	
		<form method="POST" name="form_token" id="form_token">
		{% if app.user %}
			<input type="hidden" name="token" value="{{ app.user.token }}"/>
		{% endif %}
		</form>
		<a id="lien_mwg" class="btn_mwg lien_mw" href="{{ url_mwg }}" ></a>
		<a id="lien_mwn" class="btn_mwn lien_mw" href="{{ url_mwn }}" onclick="javascript:return false;"></a>
		<a id="lien_mws" class="btn_mws lien_mw" href="{{ url_mws }}" onclick="javascript:return false;"></a>
	</div>
	<div id="espace_login">
		{% if app.user %}
			<a class="pseudo pseudo-connecte btn_deconnexion" href="{{ path('fos_user_security_logout') }}">x</a>
			<a class="btn_profil" href="{{ url_mwg }}profile/edit">
				<p class="img_profil"></p> 
				<p class="pseudo pseudo-connecte">
					{% if app.user.login %}
						{{ app.user.login }}
					{% else %}
						{{ app.user.firstname }}
					{% endif %}
				</p>
			</a>
		{% else %}
			<a class="iframe_login btn_sidentifier popuplogin" href="{{ path('fos_user_security_login') }}" onclick="javascript:return false;"></a>
			<a class="pseudo btn_sinscrire" href="{{ path('fos_user_registration_register') }}">
				<span class="plus-pseudo">+</span>
				<span class="txt-s-inscrire"> S'inscrire</span>
			</a>
            
      
            <div id="popup" class="popup_block">
            	<div id="login_normal">
                    <div id="haut_popup">
                    <a class="titre_popup">Se connecter</a>
                    <a class="close">x</a>
                    </div>
                    <div class="champs_inscription">
                        <p class="texte_popuplogin">Email</p> 
                        <INPUT class="texte_popup champspopup" type=text name="email">
                        <p class="texte_popuplogin">Mot de passe</p> 
                        <INPUT class="texte_popup champspopup" type=text name="mdp">
                    </div>
                    <div id="bas_popup_gauche">
                        <INPUT class="checkbox" type="checkbox"><p class="texte_popuplogin2">Rester connecté</p>
                        <p class="texte_popuplogin3">Mot de passe oublié ?</p>
                    </div>
                    <a class="btn_seconnecter"></a>
                </div>
                <div id="login_facebook">
                	<div id="haut_popup2">
                    <p class="texte_popuplogin4">Ou connecter vous avec Facebook</p>
                    <p class="smiley">; )</p>
                    </div>
                </div>
            </div>

            
		{% endif %}
	</div>
    
</div>    
    
</div>

{% render "WittyUserBundle:Registration:register" %}
{% render "FOSUserBundle:Security:login" %}

{% javascripts 'bundles/wittybar/js/*.js' %}
	<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}